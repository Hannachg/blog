            <div><%= error %></div>
            <% } %>
            <ul class="nav navbar-nav navbar-right">
                <% if(user){ %>
                <li><a href="/post">发表</a></li>
                <li><a href="/logout">注销</a></li>
                <% } else{ %>
                <li><a href="/login">登录</a></li>
                <li><a href="/reg">注册</a></li>
                <% } %>
            </ul>

        </div>
    </div>
</nav>
